<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NewMedicalChatbotActivity"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_new_medical_chatbot">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/sen_regular"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Have a note of the following credentials. Use them when prompted."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/sen_regular"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="italic"
        android:text="App Id: [Tap on the App ID to Copy]"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/arvo_regular"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:text="@string/app_id"
        android:id="@+id/appId"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/sen_regular"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="italic"
        android:text="App Key: [Tap on the App Key to Copy]"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/arvo_regular"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:text="@string/app_key"
        android:id="@+id/appKey"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="OPEN AUTOMATED MEDICAL ASSISTANT"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:id="@+id/open"/>

</LinearLayout>